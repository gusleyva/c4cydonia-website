const currentLang = Astro.currentLocale || 'en';
const t = content[currentLang];
---

<MainLayout title={t.meta.title} description={t.meta.description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-white dark:bg-gray-900 py-24 sm:py-32">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
          {t.hero.heading}
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
          {t.hero.subheading}
        </p>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="bg-gray-50 dark:bg-gray-800 py-24 sm:py-32">
    <div class="container mx-auto px-4">
      <div class="grid gap-12 lg:grid-cols-2">
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            {t.mission.heading}
          </h2>
          <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
            {t.mission.content}
          </p>
        </div>
        <div>
          <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white">
            {t.vision.heading}
          </h2>
          <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
            {t.vision.content}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="bg-white dark:bg-gray-900 py-24 sm:py-32">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          {t.values.heading}
        </h2>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-4">
          {t.values.items.map((value: Value) => (
            <div class="flex flex-col">
              <dt class="text-base font-semibold leading-7 text-gray-900 dark:text-white">
                {value.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600 dark:text-gray-400">
                <p class="flex-auto">{value.description}</p>
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="bg-gray-50 dark:bg-gray-800 py-24 sm:py-32">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          {t.team.heading}
        </h2>
        <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
          {t.team.subheading}
        </p>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
          {t.team.members.map((member: TeamMember) => (
            <div class="flex flex-col">
              <dt class="text-base font-semibold leading-7 text-gray-900 dark:text-white">
                {member.name}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600 dark:text-gray-400">
                <p class="text-sm font-medium text-primary-600 dark:text-primary-400">{member.role}</p>
                <p class="mt-2 flex-auto">{member.description}</p>
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </section>
</MainLayout>