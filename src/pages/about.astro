---
import MainLayout from '../layouts/MainLayout.astro';

interface Value {
  title: string;
  description: string;
}

interface TeamMember {
  name: string;
  role: string;
  description: string;
}

interface Content {
  meta: {
    title: string;
    description: string;
  };
  hero: {
    heading: string;
    subheading: string;
  };
  mission: {
    heading: string;
    content: string;
  };
  vision: {
    heading: string;
    content: string;
  };
  values: {
    heading: string;
    items: Value[];
  };
  team: {
    heading: string;
    subheading: string;
    members: TeamMember[];
  };
}

interface ContentMap {
  [key: string]: Content;
}

