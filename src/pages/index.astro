// Default to Spanish for now
const currentLang = Astro.currentLocale || 'es';
const pageContent = content[currentLang];
---

<MainLayout title={pageContent.meta.title} description={pageContent.meta.description}>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 py-24 sm:py-32">
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-8">
        <div class="flex flex-col justify-center">
          <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-6xl">
            {pageContent.hero.heading}
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600 dark:text-gray-400">
            {pageContent.hero.subheading}
          </p>
          <div class="mt-10 flex items-center gap-x-6">
            <a
              href="/services"
              class="btn btn-primary"
            >
              {pageContent.hero.cta}
            </a>
            <a
              href="/contact"
              class="btn btn-secondary"
            >
              {pageContent.hero.secondaryCta}
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-[4/3] overflow-hidden rounded-2xl bg-gray-100 dark:bg-gray-800">
            <img
              src="/images/hero-image.svg"
              alt="Hero image"
              class="h-full w-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-gray-50 dark:bg-gray-800 py-24 sm:py-32">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
          {pageContent.features.heading}
        </h2>
      </div>
      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-4">
          {pageContent.features.items.map((feature: Feature) => (
            <div class="flex flex-col">
              <dt class="flex items-center gap-x-3 text-base font-semibold leading-7 text-gray-900 dark:text-white">
                <svg
                  class="h-5 w-5 flex-none text-primary-600"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.5 17a4.5 4.5 0 01-1.44-8.765 4.5 4.5 0 018.302-3.046 3.5 3.5 0 014.504 4.272A4 4 0 0115 17H5.5zm3.75-2.75a.75.75 0 001.5 0V9.66l1.95 2.1a.75.75 0 101.1-1.02l-3.25-3.5a.75.75 0 00-1.1 0l-3.25 3.5a.75.75 0 101.1 1.02l1.95-2.1v4.59z"
                    clip-rule="evenodd"
                  />
                </svg>
                {feature.title}
              </dt>
              <dd class="mt-4 flex flex-auto flex-col text-base leading-7 text-gray-600 dark:text-gray-400">
                <p class="flex-auto">{feature.description}</p>
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-surface">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">{pageContent.services.heading}</h2>
      <p class="text-xl text-center mb-12 max-w-3xl mx-auto">{pageContent.services.subheading}</p>
      
      <div class="grid md:grid-cols-3 gap-8">
        {pageContent.services.items.map((service: Feature) => (
          <div class="bg-card p-6 rounded-lg shadow-md">
            <div class="w-12 h-12 bg-primary-100 text-primary-800 rounded-full flex items-center justify-center mb-4">
              {service.icon === 'consulting' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              )}
              {service.icon === 'web' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              )}
              {service.icon === 'mobile' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              )}
              {service.icon === 'cloud' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                </svg>
              )}
              {service.icon === 'interviewer' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              )}
              {service.icon === 'training' && (
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-2">{service.title}</h3>
            <p class="text-gray-600 dark:text-gray-300">{service.description}</p>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/services" class="btn btn-primary">{pageContent.services.cta}</a>
      </div>
    </div>
  </section>

  <!-- Examples Section -->
  <section class="py-16 bg-primary-50 dark:bg-primary-900/20">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-4">{currentLang === 'en' ? 'Real-World Examples' : 'Ejemplos Reales'}</h2>
      <p class="text-xl text-center mb-12 max-w-3xl mx-auto">
        {currentLang === 'en' 
          ? 'Discover how our services can transform your business with these practical examples' 
          : 'Descubre cómo nuestros servicios pueden transformar tu negocio con estos ejemplos prácticos'}
      </p>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Example 1: WhatsApp Bot -->
        <div class="bg-white dark:bg-primary-800 p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{currentLang === 'en' ? 'WhatsApp Business Bot' : 'Bot de WhatsApp Business'}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {currentLang === 'en' 
              ? 'Automated customer service that handles inquiries, appointments, and provides instant responses 24/7.' 
              : 'Servicio al cliente automatizado que maneja consultas, citas y proporciona respuestas instantáneas 24/7.'}
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            {currentLang === 'en' ? 'Mobile Development' : 'Desarrollo Móvil'}
          </div>
        </div>

        <!-- Example 2: Local Shop Website -->
        <div class="bg-white dark:bg-primary-800 p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{currentLang === 'en' ? 'Local Business Website' : 'Sitio Web para Negocios Locales'}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {currentLang === 'en' 
              ? 'Professional websites with online ordering, inventory management, and customer reviews for local businesses.' 
              : 'Sitios web profesionales con pedidos en línea, gestión de inventario y reseñas de clientes para negocios locales.'}
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            {currentLang === 'en' ? 'Web Development' : 'Desarrollo Web'}
          </div>
        </div>

        <!-- Example 3: Mobile App -->
        <div class="bg-white dark:bg-primary-800 p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-400 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{currentLang === 'en' ? 'Cross-Platform Mobile App' : 'Aplicación Móvil Multiplataforma'}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {currentLang === 'en' 
              ? 'Native and hybrid applications that work seamlessly across iOS and Android with a consistent user experience.' 
              : 'Aplicaciones nativas e híbridas que funcionan perfectamente en iOS y Android con una experiencia de usuario consistente.'}
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            {currentLang === 'en' ? 'Mobile Development' : 'Desarrollo Móvil'}
          </div>
        </div>

        <!-- Example 4: Data Analytics Dashboard -->
        <div class="bg-white dark:bg-primary-800 p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-yellow-100 text-yellow-600 dark:bg-yellow-900/30 dark:text-yellow-400 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{currentLang === 'en' ? 'Business Intelligence Dashboard' : 'Panel de Inteligencia de Negocios'}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {currentLang === 'en' 
              ? 'Interactive dashboards and reports that transform raw data into actionable insights for better decision-making.' 
              : 'Paneles interactivos e informes que transforman datos brutos en información accionable para una mejor toma de decisiones.'}
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            {currentLang === 'en' ? 'Data Analysis' : 'Análisis de Datos'}
          </div>
        </div>

        <!-- Example 5: System Migration -->
        <div class="bg-white dark:bg-primary-800 p-6 rounded-lg shadow-md">
          <div class="w-12 h-12 bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{currentLang === 'en' ? 'Legacy System Modernization' : 'Modernización de Sistemas Legacy'}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {currentLang === 'en' 
              ? 'Seamless migration of outdated systems to modern platforms with minimal disruption to business operations.' 
              : 'Migración sin problemas de sistemas obsoletos a plataformas modernas con mínima interrupción de las operaciones comerciales.'}
          </p>
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
            </svg>
            {currentLang === 'en' ? 'System Migration' : 'Migración de Sistemas'}
          </div>
        </div>

