---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import VisitCounter from '../components/VisitCounter.astro';

interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface Content {
  meta: {
    title: string;
    description: string;
  };
  hero: {
    heading: string;
    subheading: string;
    cta: string;
    secondaryCta: string;
  };
  features: {
    heading: string;
    items: Feature[];
  };
  services: {
    heading: string;
    subheading: string;
    cta: string;
    items: Feature[];
  };
  cta: {
    heading: string;
    subheading: string;
    primary: string;
    secondary: string;
  };
}

interface ContentMap {
  [key: string]: Content;
}

const content: ContentMap = {
  es: {
    meta: {
      title: "C4Cydonia | Consultoría y Desarrollo de Software",
      description: "Soluciones tecnológicas innovadoras y consultoría de software personalizada para empresas de todos los tamaños."
    },
    hero: {
      heading: "Transformamos Ideas en Soluciones Digitales",
      subheading: "Consultoría experta y desarrollo de software a medida para hacer crecer su negocio",
      cta: "Nuestros Servicios",
      secondaryCta: "Contáctanos"
    },
    features: {
      heading: "Por qué elegirnos",
      items: [
        {
          title: "Experiencia Técnica",
          description: "Nuestro equipo cuenta con amplia experiencia en las tecnologías más recientes y mejores prácticas de desarrollo.",
          icon: "code"
        },
        {
          title: "Soluciones Personalizadas",
