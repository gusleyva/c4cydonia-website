// Get language from URL parameter or default to Spanish
const lang = Astro.url.searchParams.get('lang') || 'es';
const t = translations[lang === 'en' ? 'en' : 'es'];
---

<MainLayout title={t.title} lang={lang === 'en' ? 'en' : 'es'}>
  <!-- Page Header -->
  <section class="bg-primary-800 text-white py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-4">{t.pageTitle}</h1>
      <p class="text-xl max-w-3xl mx-auto">{t.pageIntro}</p>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16 bg-surface">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12 mb-12">
        <!-- Service 1 -->
        <div class="bg-card p-8 rounded-lg shadow-md">
          <div class="w-16 h-16 bg-primary-100 text-primary-800 rounded-full flex items-center justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-semibold mb-4">{t.service1Title}</h3>
          <p class="mb-6">{t.service1Desc}</p>
          <ul class="space-y-2">
            {t.service1Features.map(feature => (
              <li class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>

        <!-- Service 2 -->
        <div class="bg-card p-8 rounded-lg shadow-md">
          <div class="w-16 h-16 bg-primary-100 text-primary-800 rounded-full flex items-center justify-center mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
